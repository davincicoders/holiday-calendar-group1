<% october_first = Date.new(2013, 10, 1) %>

<% october_first.step(in_a_month) do |date| %>
	<% if date.day != Holiday.where(holidate: date.day).first %>
  	<%= date.day %>
	<% else %>
		<%= date.day %><br>
		<%= Holiday.where(holidate: date.day).first.name %>
	<% end %>
<% end %>

